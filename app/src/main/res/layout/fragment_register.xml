<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.RegisterFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_medium"
        android:textSize="32sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_below="@id/tv_sign_up"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:id="@+id/tv_name"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:boxStrokeWidthFocused="0dp"
        android:background="@drawable/layout_input"
        app:boxBackgroundColor="@color/gray_03"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:fontFamily="@font/poppins_regular"
            android:hint="Input name"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_below="@id/itl_name"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:id="@+id/tv_email"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:boxStrokeWidthFocused="0dp"
        android:background="@drawable/layout_input"
        app:boxBackgroundColor="@color/gray_03"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins_regular"
            android:hint="Input email"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="24dp"
        android:layout_below="@id/itl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:id="@+id/tv_password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:boxStrokeWidthFocused="0dp"
        android:background="@drawable/layout_input"
        app:boxBackgroundColor="@color/gray_03"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins_regular"
            android:hint="Input password"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_by_sign_up"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="By signing up, you're agree to our Terms and Conditions and privacy policy."
        android:layout_below="@id/itl_password"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="@color/gray_02"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_up"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:cornerRadius="30dp"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_below="@id/tv_by_sign_up"
        />


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_sign_up"
        android:id="@+id/ll_dont_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ?"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/gray_02"
            android:textSize="16sp"
            android:id="@+id/tv_dont_account"
            />
        <Button
            android:id="@id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/orange"
            android:fontFamily="@font/poppins_semibold"
            />

    </LinearLayout>







</RelativeLayout>