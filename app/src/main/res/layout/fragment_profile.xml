<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:id="@+id/toolbar_back"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title_profile"/>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_profile"
        android:layout_marginTop="32dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/man_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile"
        app:shapeAppearanceOverlay="@style/Circular" />

    <TextView
        android:id="@+id/tv_name_user"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile" />

    <Button
        android:id="@+id/btn_details_account"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/details_account"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="Detail account"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        app:iconPadding="10dp"
        android:textColor="@color/gray_02"
        app:strokeColor="@color/gray_02"
        app:iconTint="@color/gray_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_user" />

    <Button
        android:id="@+id/btn_language"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Changge app language"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/gray_02"
        app:icon="@drawable/language"
        app:iconPadding="10dp"
        app:iconTint="@color/gray_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_details_account"
        app:strokeColor="@color/gray_02" />

    <Button
        android:id="@+id/btn_history"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="History"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/gray_02"
        app:icon="@drawable/history"
        app:iconPadding="10dp"
        app:iconTint="@color/gray_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_language"
        app:strokeColor="@color/gray_02" />

    <Button
        android:id="@+id/btn_help"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Help"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/gray_02"
        app:icon="@drawable/help"
        app:iconPadding="10dp"
        app:iconTint="@color/gray_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_history"
        app:strokeColor="@color/gray_02" />
    <Button
        android:id="@+id/btn_logout"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Logout"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#FF0000"
        app:icon="@drawable/logout"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_help"
        app:strokeColor="@color/gray_02" />


</androidx.constraintlayout.widget.ConstraintLayout>
